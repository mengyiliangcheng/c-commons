CFLAGS += -g
CFLAGS := -I$(shell pwd) 
CFLAGS += -O2
CFLAGS += -std=c++11
CC = g++
TARGET=learn

DYNAMIC_LIBS = 

CUR_PWD=$(shell pwd)

HEAD_DIR = 

SRC_DIR = 

OBJ = $(TARGET).o
#OBJ += $(INC:%.h=%.o)
CFLAGS += $(HEAD_DIR)
CFLAGS += $(DYNAMIC_LIBS)

OBJ += $(SRC_DIR:%.c=%.o)
$(TARGET):$(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(TARGET)

%.o : %.c
	$(CC) -c $(CFLAGS) $< -o $@

.PHONY:clean
clean:
	rm -f *.o *.out *.elf ./*/*.o ./*/*.swo ./*/*.swp





